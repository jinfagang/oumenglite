  width: 100%;
  text-align: center;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  box-shadow: 2rpx 2rpx 2rpx 2rpx #cfcfcf;
  display: block;
  margin: 50rpx auto;
}

.header_name {
  margin-top: 40rpx;
  font-size: 34rpx;
